<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="410dp"
        android:layout_height="734dp"
        android:background="@drawable/background"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/lock_button"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/openlock"
        android:onClick="onLockButtonTap"
        app:layout_constraintBottom_toTopOf="@+id/logo_botton"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.555" />

    <Button
        android:id="@+id/friend_botton"
        android:layout_width="193dp"
        android:layout_height="99dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/friend"
        android:onClick="open"
        app:layout_constraintLeft_toLeftOf="@+id/lock_button"
        app:layout_constraintTop_toBottomOf="@+id/lock_button" />

    <Button
        android:id="@+id/profpic_botton"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:background="@drawable/prof_pic"
        android:onClick="onProfilePicTap"
        app:layout_constraintBottom_toTopOf="@+id/lock_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/logo_botton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="224dp"
        android:layout_marginLeft="224dp"
        android:layout_marginBottom="644dp"
        android:background="@drawable/logo_button"
        android:onClick="onLogoTap"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/profpic_botton" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="140dp"
        android:onClick="onBluetoothTap"
        android:text="Bluetooth"
        app:layout_constraintBottom_toTopOf="@+id/lock_button"
        app:layout_constraintStart_toEndOf="@+id/profpic_botton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />

</androidx.constraintlayout.widget.ConstraintLayout>
