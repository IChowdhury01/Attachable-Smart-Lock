<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="728dp"
        android:background="@drawable/background"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/custom_botton"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/lock_icon_6813906"
        android:onClick="onLockButtonTap"
        app:layout_constraintBottom_toTopOf="@+id/custom_botton"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/custom_botton"
        android:layout_width="193dp"
        android:layout_height="99dp"
        android:background="@drawable/friend"
        android:onClick="open"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="511dp" />

    <Button
        android:id="@+id/custom_botton"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:background="@drawable/prof_pic"
        android:onClick="open"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="3dp" />

    <Button
        android:id="@+id/custom_botton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/logo_button"
        android:onClick="open"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>